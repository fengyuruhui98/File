<UserControl x:Class="HHJT.AFC.Tools.Develop.UCCSharp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            mc:Ignorable="d" 
             >
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Name="btnOpen" Click="btnOpen_Click" Margin="10,3" Padding="2">加载文件...</Button>
            <Label Name="lblFile"></Label>
        </StackPanel>
        <GroupBox Header="选择" DockPanel.Dock="Left" >
            <ListBox Name="lbxVMList" MinWidth="150"></ListBox>
        </GroupBox>
        <GroupBox Header="输出">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                    <Button Name="btnGenerate"  Width="60" Margin="10,2" Padding="2" Click="btnGenerate_Click">生成</Button>
                    <Button Name="btnCopy"  HorizontalAlignment="Left" Width="60" Margin="10,2" Padding="2" Click="btnCopy_Click">选择</Button>
                </StackPanel>
                <TextBox Name="tbxOutput"></TextBox>
            </DockPanel>
        </GroupBox>

    </DockPanel>
</UserControl>
